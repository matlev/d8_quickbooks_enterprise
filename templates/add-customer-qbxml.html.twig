<?xml version="1.0" encoding="utf-8"?>
<?qbxml version="13.0"?>
<QBXML>
    <QBXMLMsgsRq onError="stopOnError">
        <CustomerAddRq>
            <CustomerAdd>
                <Name>{{ properties.billing.last_name }}, {{ properties.billing.first_name }}</Name>
                <FirstName>{{ properties.billing.first_name }}</FirstName>
                <LastName>{{ properties.billing.last_name }}</LastName>
                <BillAddress>
                    <Addr1>{{ properties.billing.thoroughfare }}</Addr1>
                    <Addr2>{{ properties.billing.premise }}</Addr2>
                    {% if properties.billing.sub_premise is defined %}
                    <Addr3>{{ properties.billing.sub_premise }}</Addr3>
                    {% endif %}
                    <City>{{ properties.billing.locality }}</City>
                    {% if properties.billing.administrative_area is defined %}
                    <State>{{ properties.billing.administrative_area }}</State>
                    {% endif %}
                    <PostalCode>{{ properties.billing.postal_code }}</PostalCode>
                    <Country>{{ properties.billing.country }}</Country>
                </BillAddress>
                {% if properties.shipping is defined %}
                <ShipAddress>
                    <Addr1>{{ properties.shipping.thoroughfare }}</Addr1>
                    <Addr2>{{ properties.shipping.premise }}</Addr2>
                    {% if properties.shipping.sub_premise is defined %}
                        <Addr3>{{ properties.shipping.sub_premise }}</Addr3>
                    {% endif %}
                    <City>{{ properties.shipping.locality }}</City>
                    {% if properties.shipping.administrative_area is defined %}
                        <State>{{ properties.shipping.administrative_area }}</State>
                    {% endif %}
                    <PostalCode>{{ properties.shipping.postal_code }}</PostalCode>
                    <Country>{{ properties.shipping.country }}</Country>
                </ShipAddress>
                {% endif %}
                <Phone>{{ properties.phone }}</Phone>
                <Email>{{ properties.email }}</Email>
                <Contact>{{ properties.billing.name_line }}</Contact>
            </CustomerAdd>
        </CustomerAddRq>
    </QBXMLMsgsRq>
</QBXML>
